{
  "name": "events",
  "scripts": {
    "build": "esbuild src/index.js --bundle --platform=node --outfile=build/server.js",
    "start": "esbuild src/index.js --bundle --platform=node --outfile=build/index.js --watch",
    "start:local": "nodemon ./src",
    "docker:hmr": "nodemon -L ./app",
    "docker:reload": "docker compose -f ../../docker-compose.yml up -d --build events --force-recreate"
  },
  "dependencies": {
    "@deltahouse/app": "file:../app",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "mysql2": "^3.6.2",
    "webp-converter": "^2.3.3"
  },
  "devDependencies": {
    "cors": "^2.8.5",
    "esbuild": "^0.19.5",
    "nodemon": "^3.0.1"
  }
}
